<div class="fondo">
</div>
<div class="container mt-5 pt-5">
  <div class="row">
    <div class="col">
      <% if flash[:notice] %>
        <p id="notice" class="alert alert-dark"><%= notice %></p>
      <% end %>
      <p>
        <strong>Titulo:</strong>
        <%= @pin.title %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <strong>Descripci√≥n:</strong>
            </div>
            <div class="card-body">
              <%= @pin.description %>
            </div>
          </div>
        </div>
        <div class="col-12 mt-4">
          <div class="row">
            <% @pin.images.each do |image| %>
              <div class="col-4">
                <%= image_tag image, class: 'w-100' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <%= image_tag @pin.images[0], class: 'img-fluid' %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <% if can? :update, @pin %>
        <%= link_to 'Editar', edit_pin_path(@pin), class: 'btn btn-secondary' %> |
      <% end %>
      <%= link_to 'Volver', pins_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
