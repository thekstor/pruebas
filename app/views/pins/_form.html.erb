<div class="container">
  <%= form_with(model: pin, local: true) do |form| %>
    <% if pin.errors.any? %>
      <div id="error_explanation alert alert-secondary" role="alert">
        <h2>verifique los siguientes datos para continuar:</h2>
        <ul>
          <% pin.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control', placeholder:'Titulo' %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control', placeholder:'DescripciÃ³n' %>
    </div>
    <div class="form-group">
      <%= form.label :image %>
      <%= form.text_field :image, class: 'form-control', placeholder:'Url Imagen' %>
    </div>
    <div class="form-group">
      <%= form.submit %>
    </div>
  <% end %>
</div>
